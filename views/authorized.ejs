<html lang="en" xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="mainpage.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title></title>
</head>

<script src="../server.js"></script>

<body>
    <header>
        <div class="container">
            <nav>
                <!-- <label for="text"><b>Course Connect</b></label> -->
                <ul>
                    <li><a href="./authorized">Home</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <br />
    <h1 id="below">Course Connect</h1>

    <form autocomplete="off" action="/Rating_Page">
        <br />
        <br />

        <label id="sub">Greetings! Search for your future course to find the top
        professor</label
      >
      <fieldset id="signup">
        <table>
          <tr>
            <td align="left" class="context">Department</td>
            <td>
              <div class="autocomplete">
                <select id="department" class="input">
                    <%deptList.forEach(dept =>{%>
                        <option value="%=dept.Name%"><%=dept.Name%></option>
                    <%})%>
                  </select
                ><br />
              </div>
            </td>
          </tr>
          <tr>
            <td align="left" class="context">Number</td>
            <td>
              <input
                class="input"
                id = "classOp"
                required
                name="numField"
                maxlength="3"
                size="3"
              />
            </td>
          </tr>
        </table>

        <br /><button class="button" onclick="choose(document.getElementById('department').value, document.getElementById('classOp').value)">Look for my course</button>
      </fieldset>
    </form>
    <div class="bnav">
      <a href="https:www.facebook.com/towsonuniversity" target="_blank" class="fa fa-facebook"></a>
      <a href="https://twitter.com/TowsonU" target="_blank" class="fa fa-twitter"></a>
      <a href="https://www.instagram.com/towsonuniversity/" target="_blank" class="fa fa-instagram"></a>    
      </div>
  </body>
</html>